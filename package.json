{
  "name": "@citrusui/poole",
  "version": "1.2.0",
  "description": "Modernized fork of Poole designed for Jekyll 3.0+.",
  "scripts": {
    "lint": "sass-lint -c .sass-lint.yml \"scss/*.scss\" -v -q",
    "min": "node-sass --output-style compressed scss/poole.scss > dist/poole.min.css",
    "publish": "npm run lint && npm run sass && npm run min",
    "sass": "node-sass --output-style expanded scss/poole.scss > dist/poole.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/citrusui/poole.git"
  },
  "keywords": [
    "poole",
    "css",
    "scss",
    "jekyll"
  ],
  "author": "Avery Magnotti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/citrusui/poole/issues"
  },
  "homepage": "https://citrusui.github.io/poole/",
  "devDependencies": {
    "node-sass": "^4.4.0",
    "release": "^1.1.5",
    "sass-lint": "^1.10.2"
  }
}
